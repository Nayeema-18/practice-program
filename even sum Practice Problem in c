#include <stdio.h>

int main() {
    int n, i = 1;
    int sum = 0;

    printf("Enter a positive integer: ");
    scanf("%d", &n);

    while (i <= n) {
        if (i % 2 == 0) {
            sum += i;
        }
        i++;
    }

    printf("Sum of even numbers from 1 to %d is: %d\n", n, sum);

    return 0;
}
