#include <stdio.h>
#include <stdlib.h>
#include <math.h>

struct triangle
{
	int a;
	int b;
	int c;
};

typedef struct triangle triangle;
void sort_by_area(triangle* tr, int n) {
    // Compute area^2 for each triangle
    double *areas = (double *)malloc(n * sizeof(double));

    for (int i = 0; i < n; i++) {
        double a = tr[i].a;
        double b = tr[i].b;
        double c = tr[i].c;

        double s = (a + b + c) / 2.0;
        areas[i] = s * (s - a) * (s - b) * (s - c);  // area squared
    }

    // Sort using simple bubble sort (HackerRank expected solution)
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (areas[j] > areas[j + 1]) {
                // swap triangles
                triangle temp = tr[j];
                tr[j] = tr[j + 1];
                tr[j + 1] = temp;

                // swap area values
                double temp_area = areas[j];
                areas[j] = areas[j + 1];
                areas[j + 1] = temp_area;
            }
        }
    }

    free(areas);
}
int main()
{
	int n;
	scanf("%d", &n);
	triangle *tr = malloc(n * sizeof(triangle));
	for (int i = 0; i < n; i++) {
		scanf("%d%d%d", &tr[i].a, &tr[i].b, &tr[i].c);
	}
	sort_by_area(tr, n);
	for (int i = 0; i < n; i++) {
		printf("%d %d %d\n", tr[i].a, tr[i].b, tr[i].c);
	}
	return 0;
}
