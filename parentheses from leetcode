class Solution:
    def isValid(self, s: str) -> bool:
        stack = []
        mapping = {')': '(', '}': '{', ']': '['}
    
        for c in s:
            if c in mapping:  # if it's a closing bracket
                if not stack or stack.pop() != mapping[c]:
                    return False
            else:
                stack.append(c)

        return len(stack) == 0
